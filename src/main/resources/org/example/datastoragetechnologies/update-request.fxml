<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.*?>
<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.2-ea"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.example.datastoragetechnologies.requests.other.UpdateRequest">
    <Button layoutX="240.0" layoutY="284.0" onAction="#updateRequest" prefHeight="30.0" prefWidth="120.0"
            text="Выполнить запрос"/>
    <Button fx:id="menu" layoutX="10.0" layoutY="345.0" onAction="#menuReturn" prefHeight="30.0" prefWidth="120.0"
            text="Вернуться в меню"/>
    <TextField fx:id="id" alignment="CENTER" layoutX="529.0" layoutY="70.0" prefHeight="30.0" prefWidth="42.0"
               promptText="24">
        <font>
            <Font size="14.0"/>
        </font>
    </TextField>
    <Label alignment="CENTER" contentDisplay="CENTER" layoutX="410.0" layoutY="75.0" text="ID сотрудника:"
           textAlignment="CENTER">
        <font>
            <Font size="14.0"/>
        </font>
    </Label>
    <Label alignment="CENTER" contentDisplay="CENTER" layoutX="30.0" layoutY="75.0" text="Номер телефона:"
           textAlignment="CENTER">
        <font>
            <Font size="14.0"/>
        </font>
    </Label>
    <TextField fx:id="phone" layoutX="166.0" layoutY="70.0" promptText="+1234567">
        <font>
            <Font size="14.0"/>
        </font>
    </TextField>
    <Label alignment="CENTER" contentDisplay="CENTER" layoutY="20.0" prefHeight="27.0" prefWidth="600.0"
           text="Изменить информацию о сотруднике" textAlignment="CENTER">
        <font>
            <Font size="18.0"/>
        </font>
    </Label>
    <Label fx:id="isSuccess" alignment="CENTER" contentDisplay="CENTER" layoutY="314.0" prefHeight="20.0"
           prefWidth="600.0" text="" textAlignment="CENTER">
        <font>
            <Font size="14.0"/>
        </font>
    </Label>
    <Label alignment="CENTER" contentDisplay="CENTER" layoutX="30.0" layoutY="127.0" text="Почта:"
           textAlignment="CENTER">
        <font>
            <Font size="14.0"/>
        </font>
    </Label>
    <TextField fx:id="mail" layoutX="166.0" layoutY="122.0" promptText="example@mail.ru">
        <font>
            <Font size="14.0"/>
        </font>
    </TextField>
    <Label alignment="CENTER" contentDisplay="CENTER" layoutX="30.0" layoutY="178.0" text="Должность:"
           textAlignment="CENTER">
        <font>
            <Font size="14.0"/>
        </font>
    </Label>
    <TextField fx:id="post" layoutX="166.0" layoutY="173.0" promptText="Кассир">
        <font>
            <Font size="14.0"/>
        </font>
    </TextField>
    <Label alignment="CENTER" contentDisplay="CENTER" layoutX="30.0" layoutY="230.0" text="ФИО:" textAlignment="CENTER">
        <font>
            <Font size="14.0"/>
        </font>
    </Label>
    <TextField fx:id="initials" layoutX="166.0" layoutY="225.0" promptText="Петров П. П.">
        <font>
            <Font size="14.0"/>
        </font>
    </TextField>
</AnchorPane>
